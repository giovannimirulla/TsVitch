<brls:Box
        width="100%"
        height="100"
        axis="row"
        paddingTop="8"
        paddingBottom="8"
        paddingLeft="16"
        paddingRight="16"
        cornerRadius="4"
        backgroundColor="@theme/brls/background"
        alignItems="center">

    <!-- Movie Image -->
    <brls:Image
            id="download_item/image"
            width="40"
            height="60"
            marginRight="12"
            cornerRadius="3"
            scalingType="fit"
            visibility="gone" />

    <!-- Content area - tutto il resto del contenuto -->
    <brls:Box
            width="0"
            axis="column"
            grow="1"
            justifyContent="center">

        <!-- Titolo -->
        <brls:Label
                id="download_item/title"
                fontSize="15"
                textColor="@theme/brls/text"
                text="Download Item"
                marginBottom="4" />

        <!-- Status -->
        <brls:Label
                id="download_item/status"
                fontSize="11"
                textColor="@theme/brls/text_disabled"
                text="Ready"
                marginBottom="6" />

        <!-- Progress container (solo per download in corso) -->
        <brls:Box
                id="download_item/progress_container"
                width="100%"
                axis="column"
                visibility="gone">

            <!-- Progress text e percentuale -->
            <brls:Box
                    width="100%"
                    axis="row"
                    justifyContent="spaceBetween"
                    alignItems="center"
                    marginBottom="2">

                <brls:Label
                        id="download_item/progress"
                        fontSize="10"
                        textColor="@theme/brls/text_disabled"
                        text="0%" />

                <brls:ProgressSpinner
                        id="download_item/spinner"
                        width="16"
                        height="16"
                        visibility="gone" />
            </brls:Box>

            <!-- Progress bar -->
            <brls:Slider
                    id="download_item/progress_bar"
                    width="100%"
                    height="4" />
        </brls:Box>

    </brls:Box>

</brls:Box>
