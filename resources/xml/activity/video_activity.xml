<brls:Box>
        <VideoView
            id="video"
            hideHighlight="true"
            allowFullscreen="true"
            disabledSliderGesture="false"
            width="100%"
            height="100%"/>
            
        <!-- Download progress overlay -->
        <brls:Box
            id="download_progress_overlay"
            width="auto"
            maxWidth="400"
            height="60"
            axis="column"
            paddingTop="10"
            paddingLeft="15"
            paddingRight="15"
            paddingBottom="10"
            backgroundColor="@theme/brls/backdrop"
            cornerRadius="8"
            positionType="absolute"
            positionTop="20"
            positionLeft="20"
            positionRight="20"
            marginRight="20"
            visibility="gone">
            
            <brls:Box
                width="100%"
                height="25"
                axis="row"
                alignItems="center"
                justifyContent="spaceBetween">
                
                <brls:Label
                    id="download_status_label"
                    fontSize="14"
                    textColor="@theme/brls/text"
                    text="Download in corso..." />
                    
                <brls:Label
                    id="download_progress_text"
                    fontSize="14"
                    textColor="@theme/brls/text_disabled"
                    text="0%" />
            </brls:Box>
            
            <brls:Slider
                id="download_progress_bar"
                width="100%"
                height="6"
                marginTop="5" />
        </brls:Box>
</brls:Box>