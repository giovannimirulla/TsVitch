<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
    <brls:Box
            axis="column"
            width="100%"
            height="100%">
        <AutoTabFrame
                id="main/tabFrame"
                grow="1"
                tabBackgroundColor="@theme/color/grey_1"
                tabItemActiveTextColor="@theme/color/tsvitch"
                disableNavigationDown="true"
                defaultTab="0"
                sidebarPosition="left">

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-home.svg"
                 iconActivate="@res/svg/ico-home-activate.svg">
                <HomeLive/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-downloads.svg"
                 iconActivate="@res/svg/ico-downloads-activate.svg">
                <HomeVOD/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-history.svg"
                 iconActivate="@res/svg/ico-history-activate.svg">
                <HomeSeries/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-favorites.svg"
                 iconActivate="@res/svg/ico-favorites-activate.svg">
                <HomeFavorites/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-downloads.svg"
                 iconActivate="@res/svg/ico-downloads-activate.svg">
                <HomeDownloads/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-history.svg"
                 iconActivate="@res/svg/ico-history-activate.svg">
                <HomeHistory/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 id="main/setting"
                 icon="@res/svg/ico-setting.svg"
                 iconActivate="@res/svg/ico-setting-activate.svg">
                <brls:Box/>
            </Tab>
        </AutoTabFrame>
    </brls:Box>
</brls:AppletFrame>
