<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
    <brls:Box
            axis="column"
            width="100%"
            height="100%">
        <AutoTabFrame
                id="main/tabFrame"
                grow="1"
                tabBackgroundColor="@theme/color/grey_1"
                tabItemActiveTextColor="@theme/color/tsvitch"
                disableNavigationDown="true"
                defaultTab="0"
                sidebarPosition="left">

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-home.svg"
                 iconActivate="@res/svg/ico-home-activate.svg">
                <HomeLive/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-favorites.svg"
                 iconActivate="@res/svg/ico-favorites-activate.svg">
                <HomeFavorites/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-downloads.svg"
                 iconActivate="@res/svg/ico-downloads-activate.svg">
                <HomeDownloads/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 focusDown="main/setting"
                 icon="@res/svg/ico-history.svg"
                 iconActivate="@res/svg/ico-history-activate.svg">
                <HomeHistory/>
            </Tab>
        </AutoTabFrame>
        <brls:Box
                wireframe="false"
                width="100"
                axis="column"
                justifyContent="center"
                alignItems="center"
                positionType="absolute"
                positionBottom="20">

            <CustomButton
                    id="main/setting"
                    focusable="true"
                    highlightCornerRadius="50"
                    cornerRadius="50"
                    wireframe="false">
                <SVGImage
                        width="48"
                        height="48"
                        SVG="@res/svg/ico-setting.svg"/>
            </CustomButton>
        </brls:Box>
    </brls:Box>
</brls:AppletFrame>
