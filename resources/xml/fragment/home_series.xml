<brls:Box
        axis="row"
        width="auto"
        marginTop="10"
        height="auto">
        <RecyclingGrid
                width="270"
                paddingLeft="10"
                paddingRight="10"
                marginTop="20"
                marginBottom="8"
                itemHeight="50"
                preFetchLine="2"
                spanCount="1"
                wireframe="false"
                lineColor="@theme/color/line"
                lineRight="1"
                id="series/categories" />
        <RecyclingGrid
                paddingLeft="20"
                paddingRight="20"
                marginTop="20"
                width="420"
                spanCount="@style/tsvitch/grid/span/3"
                itemHeight="200"
                wireframe="false"
                preFetchLine="2"
                id="series/list" />

        <RecyclingGrid
                paddingLeft="20"
                paddingRight="20"
                marginTop="20"
                grow="1"
                spanCount="@style/tsvitch/grid/span/4"
                itemHeight="200"
                wireframe="false"
                preFetchLine="2"
                id="series/episodes" />
</brls:Box>
